{
  "mcpServers": {
    "playwright-extension": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--extension"
      ],
      "disabled": false,
      "autoApprove": [
        "browser_navigate",
        "browser_take_screenshot",
        "browser_click",
        "browser_type",
        "browser_snapshot",
        "browser_evaluate",
        "browser_wait_for",
        "browser_press_key",
        "browser_close",
        "browser_navigate_back",
        "browser_console_messages",
        "browser_handle_dialog",
        "browser_network_requests",
        "browser_resize",
        "browser_hover",
        "browser_select_option"
      ],
      "disabledTools": []
    }
  }
}